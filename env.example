# CampusReels Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Your app's public URL (update after deployment)
VITE_APP_URL=http://localhost:3000

# Support email address
VITE_SUPPORT_EMAIL=support@campusreels.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Resend API Key (Preferred - get from https://resend.com)
VITE_RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SMTP Configuration (Fallback)
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your-email@gmail.com
VITE_SMTP_PASS=your-app-password
VITE_SMTP_SECURE=false

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
VITE_GEMINI_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# DATABASE CONFIGURATION (Future Use)
# =============================================================================

# Database URL (for future Prisma integration)
# DATABASE_URL=postgresql://username:password@localhost:5432/campusreels
# DATABASE_URL=file:./dev.db

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel Project ID (get from Vercel dashboard)
# VERCEL_PROJECT_ID=prj_xxxxxxxxxxxxxxxxxxxxxxxx

# Vercel Organization ID (get from Vercel dashboard)
# VERCEL_ORG_ID=team_xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics ID
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable features
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_TRACKING=true
# VITE_ENABLE_DEBUG_MODE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (for future authentication)
# JWT_SECRET=your-super-secret-jwt-key-here

# Encryption Key (for sensitive data)
# ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================

# Stripe (for future payments)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Firebase (for future features)
# VITE_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode
NODE_ENV=development

# Enable debug logging
# DEBUG=true

# Hot reload port
# VITE_HMR_PORT=24678

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production mode (set automatically by Vercel)
# NODE_ENV=production

# Enable production optimizations
# VITE_ENABLE_PWA=true
# VITE_ENABLE_SW=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit .env.local to version control
# 2. All VITE_* variables are exposed to the client
# 3. Use Vercel dashboard to set production environment variables
# 4. Restart development server after changing .env.local
# 5. Use different values for development and production

# =============================================================================
# QUICK START
# =============================================================================

# 1. Copy this file: cp env.example .env.local
# 2. Fill in your API keys above
# 3. Run: npm run dev
# 4. Deploy: vercel --prod